.CRX-content
  .content-entry
  .content-entry-hover
    position: fixed
    transition: .5s linear
    z-index: 9999
    bottom: 50px
    left: 50px
    width: 50px
    height: 50px
    cursor: pointer
    // background-image: url('images/content-icon.png')
    // './images/content-icon.png'
    // 引用public下的资源 background: url('chrome-extension://__MSG_@@extension_id__/images/app.png')
    // background-size: 100% 100%
    img
     z-index: 5
     width: 100%
     height: 100%
     border-radius: 50%
  .tool
    font-size: 20px
    position: absolute
    width: 30px
    height: 30px
    left: 50%
    top: 50%
    margin: -10px
    z-index: -10
    .tool-img-box
      width: 100%
      height: 100%
      img
        border-radius: 0
        width: 100%
        height: 100%
